@{
}
<style>
    body {
        background-color: #405d27;
    }

    .content-table {
        border-collapse: collapse;
        margin: 25px 0;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
        font-size: 0.9em;
        min-width: 400px;
        overflow: hidden;
        box-shadow: 0 0 20px rgb(0, 0, 0, 0.15);
        background-color: #fff5;
    }

        .content-table::-webkit-scrollbar {
            width: 8px 8px 0 0;
            height: 8px 8px 0 0;
        }

        .content-table thead tr {
            background-color: #3e4444;
            color: #ffffff;
            text-align: left;
            font-weight: bold;
        }

        .content-table th,
        .content-table td {
            padding: 12px 15px;
        }

        .content-table tbody tr {
            border-bottom: 1px solid #dddddd;
            overflow: auto;
        }

            .content-table tbody tr:nth-child(even) {
                background-color: #f0f5f1;
            }

    button {
        background-color: #3e4444;
        color: white;
        padding: 5px 15px;
        border: none;
        cursor: pointer;
    }
</style>
<a href="@Url.Action("InsertASupplierForm")"> Insert A Supplier</a>

<table class="content-table">
    <tr>
        <td>SupplierId</td>
        <td>CompanyName</td>
        <td>ContactName</td>
        <td>ContactTitle</td>
        <td>Address</td>
        <td>City</td>
        <td>Region</td>
        <td>PostalCode</td>
        <td>Country</td>
        <td>Phone</td>
        <td>Fax</td>
        <td>HomePage</td>


    </tr>

    @foreach (var s in ViewBag.ListOfSuppliers)
    {
        <tr>
            <td>@s.SupplierId</td>
            <td>@s.CompanyName</td>
            <td>@s.ContactName</td>
            <td>@s.ContactTitle</td>
            <td>@s.Address</td>
            <td>@s.City</td>
            <td>@s.Region</td>
            <td>@s.PostalCode</td>
            <td>@s.Country</td>
            <td>@s.Phone</td>
            <td>@s.Fax</td>
            <td>@s.HomePage</td>
            <td><a href="@Url.Action("UpdateASupplierForm", new { aSupplierId = s.SupplierId })" class="btn btn-warning btn-sm">Update</a></td>
        </tr>
    }




</table>