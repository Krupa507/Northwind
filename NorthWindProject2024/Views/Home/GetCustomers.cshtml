@{
}
<a href="@Url.Action("InsertACustomerForm")"> Insert A Customer</a>


<table class="table table-bordered">
    <tr>
        <td>CustomerId</td>
        <td>CompanyName</td>
        <td>ContactName</td>
        <td>ContactTitle</td>
        <td>Address</td>
        <td>City</td>
        <td>Region</td>
        <td>PostalCode</td>
        <td>Country</td>
        <td>Phone</td>
        <td>Fax</td>

    </tr>

    @foreach (var c in ViewBag.ListOfCustomers)
    {
        <tr>
            <td>@c.CustomerId</td>
            <td>@c.CompanyName</td>
            <td>@c.ContactName</td>
            <td>@c.ContactTitle</td>
            <td>@c.Address</td>
            <td>@c.City</td>
            <td>@c.Region</td>
            <td>@c.PostalCode</td>
            <td>@c.Country</td>
            <td>@c.Phone</td>
            <td>@c.Fax</td>
            <td><a href="@Url.Action("UpdateACustomerForm",new { aCustomerId = c.CustomerId })">Update</a></td>



        </tr>
    }




</table>
