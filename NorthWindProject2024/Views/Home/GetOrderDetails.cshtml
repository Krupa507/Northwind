@{
}


<a href="@Url.Action("InsertAnOrderDetailForm")"> Insert A Order Detail</a>


<table class="table table-bordered">
    <tr>
        <td>OrderId</td>
        <td>ProductId</td>
        <td>UnitPrice</td>
        <td>Quantity</td>
        <td>Discount</td>
        

    </tr>

    @foreach (var od in ViewBag.ListOfOrderDetails)
    {
        <tr>
            <td>@od.OrderId</td>
            <td>@od.ProductId</td>
            <td>@od.UnitPrice</td>
            <td>@od.Quantity</td>
            <td>@od.Discount</td>
            <td> <a href="@Url.Action("UpdateAnOrderDetailForm", new { aOrderId = od.OrderId })">Update</a> </td>

        </tr>

    }




</table>